# i3 config translated from DWM setup

# Modifiers
set $mod Mod4
set $alt Mod1

# Appearance
font pango:Comic Mono, Font Awesome 6 Free Regular 12

# Colors (ayu dark)
set $bg       #0A0E14
set $bg2      #1D202F
set $fg       #F9F9F9
set $fg2      #CBCCC6
set $accent   #2d2c2b

# Window borders
default_border pixel 1
default_floating_border pixel 1

# Gaps
gaps inner 5
gaps outer 5

# Bar
bar {
    position top
    font pango:Comic Mono 12, Font Awesome 6 Free Regular 12
    status_command i3blocks  # Use i3blocks for compatibility with dwmblocks
    colors {
        background $bg
        statusline $fg
        separator $fg2
        focused_workspace $fg $accent $fg2
        active_workspace $fg $bg2 $fg2
        inactive_workspace $fg $bg $fg2
        urgent_workspace $fg2 $accent $fg
    }
}

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

for_window [class=".*"] layout splith
for_window [class="Gimp"] floating enable

# App assignments
assign [class="Google-chrome"] $ws2
assign [class="Microsoft-edge"] $ws2
assign [class="Firefox"] $ws2
assign [class="LibreWolf"] $ws2
assign [class="Ferdium"] $ws8
assign [class="Thunderbird"] $ws7
assign [class="jetbrains-idea-ce"] $ws6
assign [class="kitty"] $ws1
assign [class="Slack"] $ws3
assign [class="discord"] $ws4
assign [class="teams-for-linux"] $ws4

# Floating rules
for_window [class="Gimp"] floating enable

# Keybindings
bindsym $mod+space exec dmenu_run -fn "Comic Mono:size=12" -nb "$bg" -nf "$fg" -sb "$accent" -sf "$fg2"
bindsym $mod+Return exec kitty
bindsym $mod+b bar mode toggle

# Focus
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+Shift+j move to scratchpad  

# Master area control
bindsym $alt+r layout splitv  
bindsym $alt+Shift+r layout splith  
bindsym $mod+h resize shrink width 5 px or 5 ppt  
bindsym $mod+l resize grow width 5 px or 5 ppt

# Zoom
bindsym $mod+Shift+Return move container to position 0  

# Kill
bindsym $mod+q kill

# Layouts
bindsym $alt+t layout splith  
bindsym $alt+space floating toggle  
bindsym $alt+f fullscreen toggle
bindsym $alt+u layout splitv  
bindsym $alt+o floating toggle  
bindsym $alt+Shift+f layout default  

# Workspace navigation
bindsym $alt+1 workspace $ws1
bindsym $alt+2 workspace $ws2
bindsym $alt+3 workspace $ws3
bindsym $alt+4 workspace $ws4
bindsym $alt+5 workspace $ws5
bindsym $alt+6 workspace $ws6
bindsym $alt+7 workspace $ws7
bindsym $alt+8 workspace $ws8
bindsym $alt+9 workspace $ws9

# Toggle workspace view
bindsym $alt+Control+1 workspace toggle $ws1
bindsym $alt+Control+2 workspace toggle $ws2
bindsym $alt+Control+3 workspace toggle $ws3
bindsym $alt+Control+4 workspace toggle $ws4
bindsym $alt+Control+5 workspace toggle $ws5
bindsym $alt+Control+6 workspace toggle $ws6
bindsym $alt+Control+7 workspace toggle $ws7
bindsym $alt+Control+8 workspace toggle $ws8
bindsym $alt+Control+9 workspace toggle $ws9

# Move container to workspace
bindsym $alt+Shift+1 move container to workspace $ws1
bindsym $alt+Shift+2 move container to workspace $ws2
bindsym $alt+Shift+3 move container to workspace $ws3
bindsym $alt+Shift+4 move container to workspace $ws4
bindsym $alt+Shift+5 move container to workspace $ws5
bindsym $alt+Shift+6 move container to workspace $ws6
bindsym $alt+Shift+7 move container to workspace $ws7
bindsym $alt+Shift+8 move container to workspace $ws8
bindsym $alt+Shift+9 move container to workspace $ws9

# Toggle tags
bindsym $alt+Control+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $alt+Control+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $alt+Control+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $alt+Control+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $alt+Control+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $alt+Control+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $alt+Control+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $alt+Control+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $alt+Control+Shift+9 move container to workspace $ws9; workspace $ws9

# View all workspaces
bindsym $mod+0 workspace back_and_forth  # Approximate view all tags
bindsym $mod+Shift+0 move container to workspace back_and_forth  # Approximate tag all

# Multi-monitor
bindsym $mod+comma focus output left
bindsym $mod+period focus output right
bindsym $mod+Shift+comma move workspace to output left
bindsym $mod+Shift+period move workspace to output right

# Gaps adjustment
bindsym $mod+minus gaps inner current minus 1
bindsym $mod+equal gaps inner current plus 1
bindsym $mod+Shift+equal gaps inner current set 0

# Volume
bindsym XF86AudioLowerVolume exec amixer set Master 5%-
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86AudioMicMute exec amixer set Capture toggle

# Brightness
bindsym XF86MonBrightnessUp exec light -A 10
bindsym XF86MonBrightnessDown exec light -U 10

# Media keys
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioPlay exec playerctl play-pause

# Scratchpad (approximate show/hide)
bindsym $alt+s move scratchpad
bindsym $alt+Shift+s scratchpad show
bindsym $alt+h move scratchpad

# Screenshot
bindsym $mod+F4 exec flameshot gui
bindsym Print exec flameshot gui

# Take note
bindsym $mod+n exec take_note

# Exit
bindsym $mod+Shift+minus exec i3-msg exit
