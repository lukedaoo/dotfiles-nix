#!/bin/bash
#
note_dir=$HOME/Notes/quick-notes

if [ ! -d $note_dir  ]; then
    mkdir $note_dir
fi

NOTE_DATE=$(date +'%m_%d_%Y')
NOTE_FILE="$note_dir/note_$NOTE_DATE.norg"

if [ ! -f $NOTE_FILE ]; then
   touch $NOTE_FILE 
fi

NOTE_TIME=$(date +'%T')
echo '' >> $NOTE_FILE
echo "=== $NOTE_TIME === " >> $NOTE_FILE

kitty nvim $NOTE_FILE
